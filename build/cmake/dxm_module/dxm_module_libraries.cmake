
# 
# 添加库文件
# 
# dxm_module_add_libraries(MODULE LIBRARIES1 LIBRARIES)
MACRO(dxm_module_add_libraries MODULE)
	
	SET(DXM_CONFIG_MODULE_ADD_LIBRARIES_FLAG FALSE)
	FOREACH( TEMP ${ARGN} )
		# 唯一性检测;
		FOREACH(TEMP_VALUE ${DXM_MODULE_${MODULE}_LIBRARIES})
			IF(${TEMP_MODULE_ADD_LIBRARIES} MATCHES "\\.a\$")
				SET(DXM_CONFIG_MODULE_ADD_LIBRARIES_FLAG TRUE)
			ENDIF()
		ENDFOREACH()
	ENDFOREACH()

	# 调整ios的包含;
	IF(DXM_CMAKE_PLATFORM_IOS)
		IF(MODULE_ADD_LIBRARIES_FLAG)
			LIST(APPEND DXM_MODULE_${MODULE}_LIBRARIES "-force_load")
		ENDIF()
	ENDIF()	
	LIST(APPEND DXM_MODULE_${MODULE}_LIBRARIES ${ARGN})	

ENDMACRO()
